<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="300dp"
                android:height="150dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/grey_light"
                android:dashWidth="5dp"
                android:dashGap="5dp"/>
        </shape>
    </item>

    <item
        android:left="125dp"
        android:right="125dp">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="1.5dp"
                    android:color="@color/grey_light" />
            </shape>
        </rotate>
    </item>

    <item
        android:left="125dp"
        android:right="125dp">
        <shape android:shape="line">
            <stroke
                android:width="1.5dp"
                android:color="@color/grey_light" />
        </shape>
    </item>
</layer-list>